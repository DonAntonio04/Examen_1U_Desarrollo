<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Examen_1U_Desarrollo.View.PaginaPrincipal">
    <StackLayout>
        <Frame BackgroundColor="White" Padding="24" CornerRadius="0">
            <Label Text="Calcular IMC y FCN" TextColor="Black" HorizontalTextAlignment="Center" FontSize="36"/>
        </Frame>
        <Frame>
            <Label Text="Pudes seleccionar entre calcular tu índice de Masa 
               Corporal (IMC) y tu Frecuencia Cardiaca Normal (FCN)" TextColor="Black"></Label>
        </Frame>
        <Label Text="Opciones" TextColor="Black"></Label>
        <Grid>
            <RadioButton Grid.Column="0" Grid.Row="1" IsChecked="{Binding IMC}" ></RadioButton>
            <Label Text="IMC" Grid.Column="0" Grid.Row="0" />
            <RadioButton Grid.Column="2" Grid.Row="1" IsChecked="{Binding FCN}"></RadioButton>
            <Label Text="FCN" Grid.Column="2" Grid.Row="0"></Label>

            <Label Text="Proporcionar datos" TextColor="Black" Grid.Column="0" Grid.Row="3"></Label>
            <Entry Placeholder="Peso" IsVisible="{Binding  MostrarImc}" Grid.Column="0" Grid.Row="4" />
            <Entry Placeholder="Altura" IsVisible="{Binding  MostrarImc}" Grid.Column="1" Grid.Row="4" />
            <Entry Placeholder="Latidos" IsVisible="{Binding  MostrarFcn }" Grid.Column="1" Grid.Row="4" />
            <Button Text="Calcular" Command="{Binding CalcularCommand }" IsVisible="{Binding MostrarFcn}" CornerRadius="30" Grid.Column="3" Grid.Row="5"></Button>
            <Button Text="Calcular" Command="{Binding  Calcularimccommand }" IsVisible="{Binding MostrarImc}" CornerRadius="30" Grid.Column="3" Grid.Row="5"></Button>
            <Entry Text="{Binding  Resultado}" IsVisible="{Binding MostrarFcn}" Grid.Column="1" Grid.Row="6"> </Entry>
            <Entry Text="{Binding  ResultadoImc}" IsVisible="{Binding MostrarImc}" Grid.Column="1" Grid.Row="6"></Entry>
            <Image Source="comprobar.png" IsVisible="{Binding MostrarComprobar }"  HeightRequest="180" Grid.Row="7" Grid.Column="1"></Image>
           
            <Image Source="crisis.png" IsVisible="{Binding  MostrarCrisis}" HeightRequest="180"></Image>
        </Grid>

    </StackLayout>
</ContentPage>